{
  "name": "pos-printer",
  "version": "1.0.0",
  "description": "Windows POS 打印程序",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron .",
    "build:win": "electron-vite build && electron-builder --win --x64",
    "build:win-portable": "electron-vite build && electron-builder --win --x64 portable"
  },
  "dependencies": {
    "ant-design-vue": "^3.2.20",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "pinia": "^2.1.6",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^2.0.0",
    "escpos-network": "^2.0.2",
    "usb": "^2.9.0",
    "node-thermal-printer": "^4.1.2",
    "lodash": "^4.17.21",
    "dayjs": "^1.11.9",
    "html2canvas": "^1.4.1"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-vite": "^1.0.27",
    "vite": "^4.4.5",
    "@vitejs/plugin-vue": "^4.3.0",
    "unplugin-auto-import": "^0.16.6",
    "unplugin-vue-components": "^0.25.1",
    "@ant-design/icons-vue": "^6.1.0",
    "electron-builder": "^24.4.0",
    "sass": "^1.64.1"
  },
  "build": {
    "appId": "com.pos.printer",
    "productName": "POS打印机",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "signAndEditExecutable": false,
      "asar": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "POS打印机"
    },
    "extraResources": [
      {
        "from": "drivers",
        "to": "drivers"
      }
    ],
    "extraMetadata": {
      "main": "./out/main/index.js"
    }
  }
}